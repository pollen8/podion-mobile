
<section id="content">
	<div class="main">
		<div class="row-fluid">	
			<div class="span12">
				<div class="clearfix">
					<h4>Events</h4>
				</div>
				<div class="list-group m-b-small">
					{{#each}}
					<div class="list-group-item">
						{{#link-to 'event' this}}<div {{action toggleDetails id}}>{{Event_title}}</div>{{/link-to}}
					</div>
					{{/each}}
				</div>
			</div>
		</div>
	</div>
</section>
